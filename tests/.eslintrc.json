{
	"extends": [
		"wikimedia/server"
	],
	"env": {
		"jest": true
	},
	"root": true,
	"rules": {
		"array-bracket-spacing": "off",
		"computed-property-spacing": "off",
		"no-shadow": "off",
		"object-curly-spacing": "off",
		"space-in-parens": "off",

		"new-cap": "warn",
		"no-undef": "warn",
		"no-useless-escape": "warn",
		"strict": "warn"
	}
}
